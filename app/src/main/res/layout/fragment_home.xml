<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".ui.view.HomeFragment"
    android:backgroundTint="@color/pastel_green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/dark_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_from_screen_edge_to_recycler_view"
            android:layout_marginBottom="@dimen/margin_from_screen_edges"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listOfPotsRecycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_from_screen_edges"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginRight="@dimen/margin_from_screen_edges">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <TextView
                android:id="@+id/welcomingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_from_screen_edges"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dayDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_from_screen_edges"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcomingTextView" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_from_screen_edges"
                android:layout_marginTop="120dp"
                android:layout_marginRight="@dimen/margin_from_screen_edges"
                android:background="@drawable/round_layout_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_your_greenhouse"
                    android:textSize="@dimen/medium_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/home_temperature_ic"
                    android:layout_width="@dimen/home_circle_image_size"
                    android:layout_height="@dimen/home_circle_image_size"
                    android:src="@drawable/ic_home_temperature"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@id/home_moisture_ic"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <ImageView
                    android:id="@+id/home_moisture_ic"
                    android:layout_width="@dimen/home_circle_image_size"
                    android:layout_height="@dimen/home_circle_image_size"
                    android:src="@drawable/ic_home_moisture"
                    app:layout_constraintStart_toEndOf="@+id/home_temperature_ic"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@id/home_co2_ic"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <ImageView
                    android:id="@+id/home_co2_ic"
                    android:layout_width="@dimen/home_circle_image_size"
                    android:layout_height="@dimen/home_circle_image_size"
                    android:src="@drawable/ic_home_co2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_moisture_ic"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    android:layout_marginTop="@dimen/medium_margin"/>

                <TextView
                    android:id="@+id/humidityMeasurementTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/home_moisture_ic"
                    app:layout_constraintStart_toEndOf="@id/temperatureMeasurementTextView"
                    app:layout_constraintEnd_toStartOf="@+id/co2measurementTextView"/>
                <TextView
                    android:id="@+id/temperatureMeasurementTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_temperature_ic"
                    app:layout_constraintEnd_toStartOf="@id/humidityMeasurementTextView"/>
                <TextView
                    android:id="@+id/co2measurementTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/humidityMeasurementTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_co2_ic"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>