<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".GreenHouseIdActivity"
    android:backgroundTint="@color/pastel_green">

        <ImageView
            android:id="@+id/darkGreenImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/dark_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enterGreenhouseIdConstraintLayout"
        android:layout_width="346dp"
        android:layout_height="236dp"
        android:layout_marginLeft="@dimen/margin_from_screen_edges"
        android:layout_marginRight="@dimen/margin_from_screen_edges"
        android:layout_marginTop="@dimen/margin_from_screen_edges"
        android:background="@drawable/round_layout_bg"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/enterGreenhouseIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/greenhouse_id_enter_your_greenhouse_id"
            android:textSize="@dimen/medium_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/enterGreenhouseIdEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="64dp"
            android:ems="10"
            android:hint="@string/greenhouse_id_greenhouse_id"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterGreenhouseIdTextView" />

        <Button
            android:id="@+id/enterGreenhouseIdSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:background="@drawable/round_layout_bg"
            android:backgroundTint="@color/basic_green"
            android:text="@string/save_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterGreenhouseIdEditText" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/enterGreenhouseIdSignOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_layout_bg"
        android:backgroundTint="@color/basic_green"
        android:text="@string/menu_log_out"
        android:layout_marginBottom="@dimen/margin_from_screen_edges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>