<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graphs_navigation"
    app:startDestination="@+id/navigation_temperature_graph">

    <fragment
        android:id="@+id/navigation_temperature_graph"
        android:name="com.example.greehousecontroller.ui.view.TemperatureGraphFragment"
        android:label="Temperature"
        tools:layout="@layout/temperature_graph" />

    <fragment
        android:id="@+id/navigation_humidity_graph"
        android:name="com.example.greehousecontroller.ui.view.HumidityGraphFragment"
        android:label="Humidity"
        tools:layout="@layout/humidity_graph" />

    <fragment
        android:id="@+id/navigation_co2_graph"
        android:name="com.example.greehousecontroller.ui.view.CO2GraphFragment"
        android:label="CO2"
        tools:layout="@layout/co2_graph" />

</navigation>